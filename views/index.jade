extends layout

block content
  h1= title
  #new_task
    form(method="post")
      div
        span Task:
        input(type="text", name="task_content", id="newTaskContent")
      div#newTaskSubmit
        input(type="submit", value="Create")
  #tasks
    - each task in tasks
      div.task
        div.creation_date= task.creation_date
        div.content
          a(href="/todo/" + task._id)!= task.content