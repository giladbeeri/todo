extends layout

block content
  h1= title
  #new_task
    form(method="post")
      div
        span New Task
        input(type="text", name="task_content", id="newTaskContent")
      div#newTaskSubmit
        input(type="submit", value="Add")
  #tasks
    - each task in tasks
      div.task
        input.taskCheck(type="checkbox", name= "cb_" + task._id, id="cb_" + task._id, value="remove")
        div.content
          a(href="/todo/" + task._id)!= task.content