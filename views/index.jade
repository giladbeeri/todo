extends layout

block content
  h1= title
  #new_task
    form(ng-submit="addTask(task)")
      div
        label(for="newTaskContent") New Task
        input(type="text", name="task_content", id="newTaskContent", placeholder="Task content", ng-model="task.content")
      div#newTaskSubmit
        input(type="submit", value="Add")
      div
        | Content: {{ task.content }}
  #tasks
    p There are {{ tasks.length }} tasks!
    ul
      li.task(ng-repeat="task in tasks" id="{{ task._id }}")
        span.completeTask(title="Mark as completed")
          &#x2713
        span.removeTask(title="Delete", ng-click="deleteTask(task._id)") X
        span.content
          {{ task.content }}
    
    
    
