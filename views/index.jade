extends layout

block head
  script(type='text/javascript', src='/js/controllers.js')

block content
  h1= title
  #new_task
    form(method="post")
      div
        span New Task
        input(type="text", name="task_content", id="newTaskContent")
      div#newTaskSubmit
        input(type="submit", value="Add")
  #tasks
    - each task in tasks
      div.task(id=task._id)
        span.removeTask
          a(href="#") X
        div.content
          a(href="/todo/" + task._id)!= task.content
  #angular(ng-controller="TaskCtrl")
    p
      {{ todos }}
