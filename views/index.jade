extends layout

block content
  h1= title
  #new_task
    form(ng-submit="addTask(task)")
      div
        label(for="newTaskContent") New Task
        input(type="text", name="task_content", id="newTaskContent", placeholder="Task content", ng-model="task.content")
      div#newTaskSubmit
        input(type="submit", value="Add")
      div
        | Content: {{ task.content }}
  #tasks
    - each task in tasks
      div.task(id=task._id)
        span.removeTask
          a(href="#") X
        div.content
          a(href="/todo/" + task._id)!= task.content
  #angular
    p {{ tasks.length }}
    p {{ tasks }}
