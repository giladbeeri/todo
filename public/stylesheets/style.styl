default-font-size = 16px
hover-delta = 10px

body
  font-family "Helvetica Neue", "Lucida Grande", "Arial"
  font-size default-font-size
  text-align center
  text-stroke 1px rgba(255, 255, 255, 0.1)
  color #555
h1, h2
  margin 0
  font-size 22px
  color #343434
h1
  text-shadow 1px 2px 2px #ddd
  font-size 60px
#tasks
  text-align left
  margin-left auto
  margin-right auto
  width 320px
  table
    background-color #eee
  .task
    margin 20px
    width 300px
    .completeTask, .removeTask
      width 25px
      text-align center
      vertical-align text-top
      span:hover
        // commented out since it pushes the next row down (failed to prevent it)
        //font-size default-font-size + hover-delta
        cursor pointer
    .completeTask
      color #49C94B
      &:hover
        color #ABE0AB
    .removeTask
      color red
      font-family "Jolly Lodger", cursive
      &:hover
        color #FF7070
    .content
      font-weight bold
    &:hover
      color #3D2399



